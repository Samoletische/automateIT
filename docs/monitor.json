{
  "pageName": "dromLexus",             // название страницы параметров
  "collectPeriod": 60,                  // периодичность сбора данных, сек.
  "monitorPeriod": 60,                  // периодичность проверки собранных данных на наличие целей
  "filter": [                           // цели. При возникновении данных в БД, удовлетворяющих этим условиям, заказчику отправляются электронные письма
    {
      "attr": "data-ftid",              // наименование аттрибута для фильтрации значений
      "value": [
        "sales__bulls-item_is_hybrid",
        "sales__bulls-item_is_period"
      ],                                // значений может быть несколько. должно совпасть хотя бы одно (т. е. по ИЛИ)
      "xor": false                      // тип сравнения: а) false значит "равно"; б) true значит "НЕ равно"
    }
  ],
  "sendFromFirstCollect": false,        // индикатор поиска и отправки данных в самой первой сборке
  "e-mail": [
    "asdf@mail.ru",
    "qwerty@gmail.com"
  ],                                    // адреса электронных почт заказчика для отправки данных
  "collectParams": "dromLexus_web.json",// файл параметров для сбора данных
  "collectAllData": false               // false - собираемые данные будут проверяться на наличие в БД, и, если их нет, - собираться. true - будут собираться все данные, даже, если они есть в БД. При этом они будут перезаписываться только если в web.json "overwrite"=true.
}
